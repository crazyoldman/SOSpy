<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">

	<TextView android:layout_width="fill_parent" android:text="@string/options_greeting"
		android:layout_height="wrap_content" />
	<TextView android:layout_width="fill_parent" android:text="@string/select_options"
		android:layout_height="wrap_content" />


	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/optionsLinearLayout1" android:layout_height="wrap_content"
		android:orientation="vertical" android:baselineAligned="false">

		<TextView android:layout_width="match_parent" android:id="@+id/nicknameDisplay"
			android:layout_height="wrap_content" android:minHeight="?android:attr/listPreferredItemHeight"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:paddingLeft="35dip" />
		<Button android:text="Clear Settings" android:id="@+id/clearSettings"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1"></Button>
	</LinearLayout>
</LinearLayout>
